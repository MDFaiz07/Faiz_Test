
@{
    ViewBag.Title = "Forms";
}
@model Faiz_Test.Models.StuModel


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Forms</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Basic Form Elements
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                @using (Html.BeginForm("Forms", "Home", FormMethod.Post))
                                {
                                    @Html.HiddenFor(m => m.Id);
                                        <div class="form-group">
                                            <label>Name</label>
                                            @Html.TextBoxFor(m => m.name, new { @class = "form-control", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label>Age</label>
                                            @Html.TextBoxFor(m => m.age, new { @class = "form-control", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label>Company</label>
                                            @Html.TextBoxFor(m => m.Company, new { @class = "form-control", @required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
                                        </div>

                                        <button type="submit" class="btn btn-success">Submit</button>

                                }
                                </div>
                            <!-- /.col-lg-6 (nested) -->
                           
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>






}



